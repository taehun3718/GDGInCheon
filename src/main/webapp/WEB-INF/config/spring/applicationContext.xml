<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xsi:schemaLocation="http://www.springframework.org/schema/mvc 
							http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
							http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<!-- resources location -->
	<mvc:resources 	location="/WEB-INF/static/js/" 
					mapping="/js/**" />
	<mvc:resources 	location="/WEB-INF/static/css/" 
					mapping="/css/**" />
	<mvc:resources 	location="/WEB-INF/static/image/" 
					mapping="/image/**" />
					<mvc:resources 	location="/WEB-INF/static/bower_components/" 
					mapping="/bower_components/**" />
	
	<!-- viewResolver -->
	
	<bean	id="viewResolver"
			class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<!-- MultipartResolver -->
	<bean	id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="104857600"/>
		<property name="defaultEncoding" value="UTF-8"/>
	</bean>
	
	<!-- Main  -->
	<bean	id="mainController"
			class="com.sqisoft.ssbr.main.web.MainController">
			<!--name:class setterMethod ref:reference bean Id(param) -->
			<property name="mainService" ref="mainService"/>
	</bean>
	
	<bean	id="mainService"
			class="com.sqisoft.ssbr.main.service.impl.MainServiceImpl">
			<property name="mainBiz" ref="mainBiz"/>
	</bean>
	
	<bean	id="mainBiz"
			class="com.sqisoft.ssbr.main.biz.impl.MainBizImpl">
			<property name="mainDAO" ref="mainDAO"/>
	</bean>
	
	<bean	id="mainDAO"
			class="com.sqisoft.ssbr.main.dao.impl.MainDAOImpl">
			<property name="sqlSessionTemplate" ref="sqlSessionTemplate"/>
	</bean>
	
	<!--Download-->
	
	<bean	id="virusDownloadController"
			class="com.sqisoft.ssbr.download.web.VirusDownloadController">
			<!--name:class setterMethod ref:reference bean Id(param) -->
			<property name="virusDownloadService" ref="virusDownloadService"/>
	</bean>
	
	<bean	id="virusDownloadService"
			class="com.sqisoft.ssbr.download.service.impl.VirusDownloadServiceImpl">
	</bean>
	
</beans>